@model WebSite.ViewModels.Admin.CompanyFormViewModel

@{
    ViewBag.Title = "Edit Company";
}

@using (Html.BeginForm("EditCompany", "Admin", FormMethod.Post, new { data_notification_success = "Company updated." }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit Company #@Model.Id</h4>
    </div>
    <div class="modal-body">
        @Html.Partial("_CompanyForm", Model)
    </div>
    <div class="modal-footer text-right">
        <button type="submit" class="btn btn-primary" data-loading-text="Saving...">Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>
}