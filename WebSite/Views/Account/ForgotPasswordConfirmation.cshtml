@model WebSite.ViewModels.Account.ForgotPasswordViewModel

@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
    ViewBag.Title = "Forgot Password Confirmation";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-wrap">
                <div class="login-logo">
                    <img src="http://placehold.it/100x100/?text=LOGO" alt="" />
                </div>
                <h2 class="login-header">Reset your password</h2>
                <div class="panel panel-default panel-login">
                    <div class="panel-body">
                        <p>An e-mail has been sent to @*@Model.Email*@ with further instructions. If it doesn't appear within a few minutes, check your spam folder.</p>
                        <a href="@Url.Action("LogIn")" class="btn btn-primary btn-lg btn-block">Back to Sign in</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>